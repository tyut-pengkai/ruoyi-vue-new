    <delete id="deleteSysBalanceLogById" parameterType="Long">
        update sys_balance_log
        set del_flag = '2'
        where id = #{id}
    </delete>

    <delete id="deleteSysBalanceLogByIds" parameterType="String">
        update sys_balance_log set del_flag = '2' where id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="cleanBalanceLog">
        truncate table sys_balance_log
    </update>
</mapper>