<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BjWorkerMapper">
    
    <resultMap type="BjWorker" id="BjWorkerResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="workType"    column="work_type"    />
    </resultMap>

    <sql id="selectBjWorkerVo">
        select id, name, work_type from bj_worker
    </sql>

    <select id="selectBjWorkerList" parameterType="BjWorker" resultMap="BjWorkerResult">
        <include refid="selectBjWorkerVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="workType != null  and workType != ''"> and work_type = #{workType}</if>
        </where>
    </select>
    
    <select id="selectBjWorkerById" parameterType="Long" resultMap="BjWorkerResult">
        <include refid="selectBjWorkerVo"/>
        where id = #{id}
    </select>

    <insert id="insertBjWorker" parameterType="BjWorker" useGeneratedKeys="true" keyProperty="id">
        insert into bj_worker
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="workType != null">work_type,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="workType != null">#{workType},</if>
         </trim>
    </insert>

    <update id="updateBjWorker" parameterType="BjWorker">
        update bj_worker
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="workType != null">work_type = #{workType},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBjWorkerById" parameterType="Long">
        delete from bj_worker where id = #{id}
    </delete>

    <delete id="deleteBjWorkerByIds" parameterType="String">
        delete from bj_worker where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>