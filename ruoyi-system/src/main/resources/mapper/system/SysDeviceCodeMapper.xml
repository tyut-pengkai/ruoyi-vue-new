<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysDeviceCodeMapper">

    <resultMap type="SysDeviceCode" id="SysDeviceCodeResult">
        <result property="deviceCodeId"    column="device_code_id"    />
        <result property="deviceCode"    column="device_code"    />
        <result property="lastLoginTime"    column="last_login_time"    />
        <result property="loginTimes"    column="login_times"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectSysDeviceCodeVo">
        select device_code_id,
               device_code,
               last_login_time,
               login_times,
               sys_device_code.status,
               sys_device_code.create_by,
               sys_device_code.create_time,
               sys_device_code.update_by,
               sys_device_code.update_time,
               sys_device_code.remark
        from sys_device_code
    </sql>

    <select id="selectSysDeviceCodeList" parameterType="SysDeviceCode" resultMap="SysDeviceCodeResult">
        <include refid="selectSysDeviceCodeVo"/>
        <if test="params.dataScope != null and params.dataScope != ''"><!-- 数据范围过滤 -->
            <!-- 数据范围过滤 -->
            inner join sys_user u on sys_device_code.create_by = u.user_name
        </if>
        <where>
            <if test="deviceCode != null  and deviceCode != ''">and device_code = #{deviceCode}</if>
            <if test="params.beginLastLoginTime != null and params.beginLastLoginTime != '' and params.endLastLoginTime != null and params.endLastLoginTime != ''">
                and last_login_time between #{params.beginLastLoginTime} and #{params.endLastLoginTime}
            </if>
            <if test="params.beginLoginTimes != null and params.beginLoginTimes != '' and params.endLoginTimes != null and params.endLoginTimes != ''">
                and login_times between #{params.beginLoginTimes} and #{params.endLoginTimes}
            </if>
            <if test="status != null  and status != ''">and status = #{status}</if>
            <if test="remark != null and remark != ''">and sys_device_code.remark like concat('%', #{remark}, '%')</if>
            <if test="params.dataScope != null and params.dataScope != ''"><!-- 数据范围过滤 -->
                <!-- 数据范围过滤 -->
                ${params.dataScope}
            </if>
        </where>
    </select>

    <select id="selectSysDeviceCodeByDeviceCodeId" parameterType="Long" resultMap="SysDeviceCodeResult">
        <include refid="selectSysDeviceCodeVo"/>
        where device_code_id = #{deviceCodeId}
    </select>

    <select id="selectSysDeviceCodeByDeviceCode" parameterType="String" resultMap="SysDeviceCodeResult">
        <include refid="selectSysDeviceCodeVo"/>
        where device_code = #{deviceCode}
    </select>

    <insert id="insertSysDeviceCode" parameterType="SysDeviceCode" useGeneratedKeys="true" keyProperty="deviceCodeId">
        insert into sys_device_code
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="deviceCode != null and deviceCode != ''">device_code,</if>
            <if test="lastLoginTime != null">last_login_time,</if>
            <if test="loginTimes != null">login_times,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="deviceCode != null and deviceCode != ''">#{deviceCode},</if>
            <if test="lastLoginTime != null">#{lastLoginTime},</if>
            <if test="loginTimes != null">#{loginTimes},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateSysDeviceCode" parameterType="SysDeviceCode">
        update sys_device_code
        <trim prefix="SET" suffixOverrides=",">
            <if test="deviceCode != null and deviceCode != ''">device_code = #{deviceCode},</if>
            <if test="lastLoginTime != null">last_login_time = #{lastLoginTime},</if>
            <if test="loginTimes != null">login_times = #{loginTimes},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where device_code_id = #{deviceCodeId}
    </update>

    <delete id="deleteSysDeviceCodeByDeviceCodeId" parameterType="Long">
        delete from sys_device_code where device_code_id = #{deviceCodeId}
    </delete>

    <delete id="deleteSysDeviceCodeByDeviceCodeIds" parameterType="String">
        delete from sys_device_code where device_code_id in
        <foreach item="deviceCodeId" collection="array" open="(" separator="," close=")">
            #{deviceCodeId}
        </foreach>
    </delete>
</mapper>