<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.OaSharedFileMapper">
    
    <resultMap type="OaSharedFile" id="OaSharedFileResult">
        <result property="id"    column="id"    />
        <result property="fileName"    column="file_name"    />
        <result property="filePath"    column="file_path"    />
        <result property="fileType"    column="file_type"    />
        <result property="uploadDeptId"    column="upload_dept_id"    />
        <result property="uploadUserId"    column="upload_user_id"    />
        <result property="uploadTime"    column="upload_time"    />
        <result property="downloadCount"    column="download_count"    />
        <result property="updatedBy"    column="updated_by"    />
        <result property="updatedTime"    column="updated_time"    />
    </resultMap>

    <sql id="selectOaSharedFileVo">
        select id, file_name, file_path, file_type, upload_dept_id, upload_user_id, upload_time, download_count, updated_by, updated_time from oa_shared_file
    </sql>

    <select id="selectOaSharedFileList" parameterType="OaSharedFile" resultMap="OaSharedFileResult">
        <include refid="selectOaSharedFileVo"/>
        <where>  
            <if test="fileName != null  and fileName != ''"> and file_name like concat('%', #{fileName}, '%')</if>
            <if test="filePath != null  and filePath != ''"> and file_path = #{filePath}</if>
            <if test="fileType != null "> and file_type = #{fileType}</if>
            <if test="uploadDeptId != null "> and upload_dept_id = #{uploadDeptId}</if>
            <if test="uploadUserId != null "> and upload_user_id = #{uploadUserId}</if>
            <if test="uploadTime != null "> and upload_time = #{uploadTime}</if>
            <if test="downloadCount != null "> and download_count = #{downloadCount}</if>
            <if test="updatedBy != null "> and updated_by = #{updatedBy}</if>
            <if test="updatedTime != null "> and updated_time = #{updatedTime}</if>
        </where>
    </select>
    
    <select id="selectOaSharedFileById" parameterType="Long" resultMap="OaSharedFileResult">
        <include refid="selectOaSharedFileVo"/>
        where id = #{id}
    </select>

    <insert id="insertOaSharedFile" parameterType="OaSharedFile" useGeneratedKeys="true" keyProperty="id">
        insert into oa_shared_file
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="fileName != null and fileName != ''">file_name,</if>
            <if test="filePath != null and filePath != ''">file_path,</if>
            <if test="fileType != null">file_type,</if>
            <if test="uploadDeptId != null">upload_dept_id,</if>
            <if test="uploadUserId != null">upload_user_id,</if>
            <if test="uploadTime != null">upload_time,</if>
            <if test="downloadCount != null">download_count,</if>
            <if test="updatedBy != null">updated_by,</if>
            <if test="updatedTime != null">updated_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="fileName != null and fileName != ''">#{fileName},</if>
            <if test="filePath != null and filePath != ''">#{filePath},</if>
            <if test="fileType != null">#{fileType},</if>
            <if test="uploadDeptId != null">#{uploadDeptId},</if>
            <if test="uploadUserId != null">#{uploadUserId},</if>
            <if test="uploadTime != null">#{uploadTime},</if>
            <if test="downloadCount != null">#{downloadCount},</if>
            <if test="updatedBy != null">#{updatedBy},</if>
            <if test="updatedTime != null">#{updatedTime},</if>
         </trim>
    </insert>

    <update id="updateOaSharedFile" parameterType="OaSharedFile">
        update oa_shared_file
        <trim prefix="SET" suffixOverrides=",">
            <if test="fileName != null and fileName != ''">file_name = #{fileName},</if>
            <if test="filePath != null and filePath != ''">file_path = #{filePath},</if>
            <if test="fileType != null">file_type = #{fileType},</if>
            <if test="uploadDeptId != null">upload_dept_id = #{uploadDeptId},</if>
            <if test="uploadUserId != null">upload_user_id = #{uploadUserId},</if>
            <if test="uploadTime != null">upload_time = #{uploadTime},</if>
            <if test="downloadCount != null">download_count = #{downloadCount},</if>
            <if test="updatedBy != null">updated_by = #{updatedBy},</if>
            <if test="updatedTime != null">updated_time = #{updatedTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteOaSharedFileById" parameterType="Long">
        delete from oa_shared_file where id = #{id}
    </delete>

    <delete id="deleteOaSharedFileByIds" parameterType="String">
        delete from oa_shared_file where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>