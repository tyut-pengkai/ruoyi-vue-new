<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kekecha.xiantu.mapper.MemberShipMapper">

    <resultMap type="com.kekecha.xiantu.domain.MemberShip" id="MemberShipResultMap">
        <result property="id"          column="id"    />
        <result property="name"          column="name"    />
        <result property="phone"          column="phone"    />
        <result property="description"          column="description"    />
        <result property="createTime"          column="createTime"    />
    </resultMap>

    <select id="select" resultMap="MemberShipResultMap">
        SELECT * FROM xiantu_membership
    </select>

    <insert id="insert" parameterType="com.kekecha.xiantu.domain.MemberShip">
        INSERT INTO xiantu_membership
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="phone != null and phone != ''">phone,</if>
            <if test="description != null and description != ''">description,</if>
            <if test="createTime != 0">createTime,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="phone != null and phone != ''">#{phone},</if>
            <if test="description != null and description != ''">#{description},</if>
            <if test="createTime != 0">#{createTime},</if>
        </trim>
    </insert>

    <update id="update" parameterType="com.kekecha.xiantu.domain.MemberShip">
        UPDATE xiantu_membership
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name=#{name},</if>
            <if test="phone != null and phone != ''">phone=#{phone},</if>
            <if test="description != null and description != ''">description=#{description},</if>
            <if test="createTime != 0">createTime=#{createTime},</if>
        </trim>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM xiantu_membership WHERE id = #{id}
    </delete>
</mapper>