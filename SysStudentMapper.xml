<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysStudentMapper">

    <resultMap id="BaseResultMap" type="com.ruoyi.common.core.domain.entity.SysStudent">
        <id column="student_id" property="studentId" jdbcType="BIGINT"/>
        <result column="student_name" property="studentName" jdbcType="VARCHAR"/>
        <result column="gender" property="gender" jdbcType="CHAR"/>
        <result column="age" property="age" jdbcType="INTEGER"/>
        <result column="class_name" property="className" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="phonenumber" property="phonenumber" jdbcType="VARCHAR"/>
        <result column="avatar" property="avatar" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="CHAR"/>
        <result column="del_flag" property="delFlag" jdbcType="TINYINT"/>
        <result column="create_by" property="createBy" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_by" property="updateBy" jdbcType="VARCHAR"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="selectStudentList" parameterType="com.ruoyi.common.core.domain.entity.SysStudent" resultMap="BaseResultMap">
        SELECT *
        FROM sys_student
        <where>
            <if test="studentName != null and studentName != ''">
                AND student_name LIKE CONCAT('%', #{studentName}, '%')
            </if>
            <if test="gender != null and gender != ''">
                AND gender = #{gender}
            </if>
        </where>
    </select>

    <select id="selectStudentById" parameterType="long" resultMap="BaseResultMap">
        SELECT *
        FROM sys_student
        WHERE student_id = #{studentId}
    </select>

    <insert id="insertStudent" parameterType="com.ruoyi.common.core.domain.entity.SysStudent">
        INSERT INTO sys_student (
            student_name, gender, age, class_name,
            email, phonenumber, avatar, password,
            status, del_flag, create_by, create_time
        )
        VALUES (
                   #{studentName}, #{gender}, #{age}, #{className},
                   #{email}, #{phonenumber}, #{avatar}, #{password},
                   #{status}, #{delFlag}, #{createBy}, #{createTime}
               )
    </insert>

    <update id="updateStudent" parameterType="com.ruoyi.common.core.domain.entity.SysStudent">
        UPDATE sys_student
        SET
            student_name = #{studentName},
            gender = #{gender},
            age = #{age},
            class_name = #{className},
            email = #{email},
            phonenumber = #{phonenumber},
            avatar = #{avatar},
            password = #{password},
            status = #{status},
            update_by = #{updateBy},
            update_time = #{updateTime}
        WHERE student_id = #{studentId}
    </update>

    <delete id="deleteStudentById" parameterType="long">
        DELETE FROM sys_student
        WHERE student_id = #{studentId}
    </delete>

</mapper>
