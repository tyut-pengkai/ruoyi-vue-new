<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysPaperMapper">
    
    <resultMap type="SysPaper" id="SysPaperResult">
        <result property="paperId"    column="paper_id"    />
        <result property="paperTitle" column="paper_title" />
        <result property="paperAbstract" column="paper_abstract" />
        <result property="submitDate" column="submit_date" />
        <result property="status"     column="status"      />
        <result property="studentId"  column="student_id"  />
        <result property="createBy"   column="create_by"   />
        <result property="createTime" column="create_time" />
        <result property="updateBy"   column="update_by"   />
        <result property="updateTime" column="update_time" />
        <result property="remark"     column="remark"      />
    </resultMap>

    <sql id="selectSysPaperVo">
        select paper_id, paper_title, paper_abstract, submit_date, status, student_id, create_by, create_time, update_by, update_time, remark from sys_paper
    </sql>

    <select id="selectSysPaperList" parameterType="SysPaper" resultMap="SysPaperResult">
        <include refid="selectSysPaperVo"/>
        <where>  
            <if test="paperTitle != null  and paperTitle != ''"> and paper_title like concat('%', #{paperTitle}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="studentId != null"> and student_id = #{studentId}</if>
        </where>
    </select>
    
    <select id="selectSysPaperByPaperId" parameterType="Long" resultMap="SysPaperResult">
        <include refid="selectSysPaperVo"/>
        where paper_id = #{paperId}
    </select>
        
    <insert id="insertSysPaper" parameterType="SysPaper" useGeneratedKeys="true" keyProperty="paperId">
        insert into sys_paper
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="paperTitle != null and paperTitle != ''">paper_title,</if>
            <if test="paperAbstract != null and paperAbstract != ''">paper_abstract,</if>
            <if test="submitDate != null and submitDate != ''">submit_date,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="studentId != null">student_id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="paperTitle != null and paperTitle != ''">#{paperTitle},</if>
            <if test="paperAbstract != null and paperAbstract != ''">#{paperAbstract},</if>
            <if test="submitDate != null and submitDate != ''">#{submitDate},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="studentId != null">#{studentId},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateSysPaper" parameterType="SysPaper">
        update sys_paper
        <trim prefix="SET" suffixOverrides=",">
            <if test="paperTitle != null and paperTitle != ''">paper_title = #{paperTitle},</if>
            <if test="paperAbstract != null and paperAbstract != ''">paper_abstract = #{paperAbstract},</if>
            <if test="submitDate != null and submitDate != ''">submit_date = #{submitDate},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="studentId != null">student_id = #{studentId},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where paper_id = #{paperId}
    </update>

    <delete id="deleteSysPaperByPaperId" parameterType="Long">
        delete from sys_paper where paper_id = #{paperId}
    </delete>

    <delete id="deleteSysPaperByPaperIds" parameterType="String">
        delete from sys_paper where paper_id in 
        <foreach item="paperId" collection="array" open="(" separator="," close=")">
            #{paperId}
        </foreach>
    </delete>
</mapper>