    <delete id="deleteSysLoginCodeTemplateByTemplateId" parameterType="Long">
        update sys_login_code_template
        set del_flag = '2'
        where template_id = #{templateId}
    </delete>

    <delete id="deleteSysLoginCodeTemplateByTemplateIds" parameterType="String">
        update sys_login_code_template set del_flag = '2' where template_id in
        <foreach collection="array" item="templateId" open="(" separator="," close=")">
            #{templateId}
        </foreach>
    </delete>

    <select id="selectSysLoginCodeTemplateByAppIdAndTemplateName" resultMap="SysLoginCodeTemplateResult">
