<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.payment.mapper.WebhookEventMapper">
    
    <resultMap type="WebhookEvent" id="WebhookEventResult">
        <id     property="eventId"      column="event_id"      />
        <result property="eventChannel" column="event_channel" />
        <result property="eventType"    column="event_type"    />
        <result property="summary"      column="summary"       />
        <result property="createTime"   column="create_time"   />
    </resultMap>
    
    <sql id="selectWebhookEventVo">
        select event_id, event_channel, event_type, summary, create_time from webhook_events
    </sql>

    <select id="selectWebhookEventByEventId" parameterType="String" resultMap="WebhookEventResult">
        <include refid="selectWebhookEventVo"/>
        where event_id = #{eventId}
    </select>
    
    <insert id="insertWebhookEvent" parameterType="WebhookEvent">
        insert into webhook_events(event_id, event_channel, event_type, summary, create_time) 
        values(#{eventId}, #{eventChannel}, #{eventType}, #{summary}, sysdate())
    </insert>

</mapper> 