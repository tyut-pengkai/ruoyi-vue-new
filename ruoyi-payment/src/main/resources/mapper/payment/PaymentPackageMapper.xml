<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.payment.mapper.PaymentPackageMapper">
    
    <resultMap type="PaymentPackage" id="PaymentPackageResult">
        <result property="packageId"    column="package_id"    />
        <result property="name"    column="name"    />
        <result property="hours"    column="hours"    />
        <result property="freeHours"    column="free_hours"    />
        <result property="price"    column="price"    />
        <result property="currency"    column="currency"    />
        <result property="discountLabel"    column="discount_label"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectPaymentPackageVo">
        select package_id, name, hours, free_hours, price, currency, discount_label, status, del_flag, create_by, create_time, update_by, update_time, remark from payment_package
    </sql>

    <select id="selectPaymentPackageList" parameterType="PaymentPackage" resultMap="PaymentPackageResult">
        <include refid="selectPaymentPackageVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="hours != null "> and hours = #{hours}</if>
            <if test="price != null "> and price = #{price}</if>
            <if test="currency != null  and currency != ''"> and currency = #{currency}</if>
            <if test="discountLabel != null  and discountLabel != ''"> and discount_label = #{discountLabel}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectPaymentPackageByPackageId" parameterType="Long" resultMap="PaymentPackageResult">
        <include refid="selectPaymentPackageVo"/>
        where package_id = #{packageId}
    </select>

    <insert id="insertPaymentPackage" parameterType="PaymentPackage" useGeneratedKeys="true" keyProperty="packageId">
        insert into payment_package
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="hours != null">hours,</if>
            <if test="freeHours != null">free_hours,</if>
            <if test="price != null">price,</if>
            <if test="currency != null and currency != ''">currency,</if>
            <if test="discountLabel != null and discountLabel != ''">discount_label,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="hours != null">#{hours},</if>
            <if test="freeHours != null">#{freeHours},</if>
            <if test="price != null">#{price},</if>
            <if test="currency != null and currency != ''">#{currency},</if>
            <if test="discountLabel != null and discountLabel != ''">#{discountLabel},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updatePaymentPackage" parameterType="PaymentPackage">
        update payment_package
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="hours != null">hours = #{hours},</if>
            <if test="freeHours != null">free_hours = #{freeHours},</if>
            <if test="price != null">price = #{price},</if>
            <if test="currency != null and currency != ''">currency = #{currency},</if>
            <if test="discountLabel != null and discountLabel != ''">discount_label = #{discountLabel},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where package_id = #{packageId}
    </update>

    <delete id="deletePaymentPackageByPackageId" parameterType="Long">
        delete from payment_package where package_id = #{packageId}
    </delete>

    <delete id="deletePaymentPackageByPackageIds" parameterType="String">
        delete from payment_package where package_id in 
        <foreach item="packageId" collection="array" open="(" separator="," close=")">
            #{packageId}
        </foreach>
    </delete>
</mapper>